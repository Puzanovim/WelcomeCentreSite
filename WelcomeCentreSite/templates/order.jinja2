{% extends 'layout.jinja2' %}

{% block title %}{{ title }}{% endblock %}

{% block header %}
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="order-heading">
                    <h1>Заявка на мероприятие</h1>
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock header %}

{% block page_content %}
<div class="page-header">
    <h1>Заявка №{{ info.id }}</h1>
</div>

<div>
<table class="table table-hover">
    <tr>
        <td class="col-lg-4">Название организации</td>
        <td class="col-lg-8">{{ info.name }}</td>
    </tr>
    <tr>
        <td>Контактное лицо</td>
        <td>{{ info.contact_face }}</td>
    </tr>
    <tr>
        <td>Номер телефона</td>
        <td>{{ info.phone }}</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>{{ info.email }}</td>
    </tr>
    <tr>
        <td>Мероприятие</td>
        <td>{{ info.event }}</td>
    </tr>
    <tr>
        <td>Дата проведения</td>
        <td>{{ info.date }}</td>
    </tr>
    <tr>
        <td>Время проведения</td>
        <td>{{ info.time }}</td>
    </tr>
    <tr>
        <td>Место проведения</td>
        <td>{{ info.address }}</td>
    </tr>
    <tr>
        <td>Количество участников</td>
        <td>{{ info.count_participants }}</td>
    </tr>
    <tr>
        <td>Примечание</td>
        <td>{{ info.note }}</td>
    </tr>
</table>
</div>
{% endblock %}